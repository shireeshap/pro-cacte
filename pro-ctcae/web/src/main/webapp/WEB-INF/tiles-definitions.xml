<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

    <definition name="default-layout" template="/WEB-INF/layouts/defaultLayout.jsp">

        <put-attribute name="title" value="ProCtcAE"></put-attribute>
        <put-attribute name="head" value="/WEB-INF/tags/standard/head.tag"></put-attribute>
        <put-attribute name="header" value="/WEB-INF/tags/standard/header.tag"></put-attribute>
        <put-attribute name="footer" value="/WEB-INF/tags/standard/footer.tag"/>
    </definition>

    <definition name="home" extends="default-layout">
        <put-attribute name="title" value="title.home"/>
        <put-attribute name="body" value="/WEB-INF/views/home.jsp"/>
    </definition>

    <definition name="error" extends="default-layout">
        <put-attribute name="title" value="title.systemError"/>
        <put-attribute name="body" value="/WEB-INF/views/error.jsp"/>
        <put-attribute name="navigationTab" value=""/>
    </definition>

</tiles-definitions>
