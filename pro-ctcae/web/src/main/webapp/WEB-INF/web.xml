    <error-page>
        <error-code>500</error-code>
        <location>/public/error</location>
    </error-page>

    <error-page>
        <error-code>400</error-code>
        <location>/public/error</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/public/error</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/public/error</location>
    </error-page>
