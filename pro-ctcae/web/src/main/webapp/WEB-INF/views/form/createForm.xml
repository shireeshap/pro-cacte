<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
		http://www.springframework.org/schema/webflow
		http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">


    <var name="command" class="gov.nih.nci.ctcae.web.form.CreateFormCommand"></var>

    <view-state id="createForm" view="form/createForm" model="command">
        <on-render>
            <evaluate expression="command.crf.crfItems.size()" result="viewScope.totalQuestions"></evaluate>
            <evaluate expression="proCtcTermRepository.findAll()" result="viewScope.proCtcTerms"></evaluate>
        </on-render>
        <transition on="review" bind="true" to="reviewForm">
            <evaluate expression="command.updateCrfItems(finderRepository)"/>
        </transition>
    </view-state>
    <view-state id="reviewForm" view="form/reviewForm" model="command">
        <transition on="back" to="createForm"></transition>
        <transition on="save" to="finalSave"></transition>
    </view-state>

    <end-state id="finalSave" commit="true" view="form/confirmForm">
        <on-entry>
            <evaluate
                    expression="crfRepository.save(command.crf)"></evaluate>
        </on-entry>
    </end-state>
</flow>